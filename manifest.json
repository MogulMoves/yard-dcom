{
	"manifest_version": 3,
	"name": "Binge & Cringe",
	"version": "1.0.6",
	"description": "Watch Disney+ TV Shows and Movies with commentary from Stanz and Joe",
	"icons": {
		"16": "assets/logo16.png",
		"48": "assets/logo48.png",
		"128": "assets/logo128.png"
	},
	"action": {
		"default_popup": "popup/popup.html"
	},
	"permissions": ["storage"],
	"host_permissions": ["*://*.disneyplus.com/*", "*://*.patreon.com/*"],
	"content_scripts": [
		{
			"js": ["browser-polyfill.js", "content/yard-content.js"],
			"css": ["content/index.css"],
			"matches": ["*://*.disneyplus.com/*"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["audio/audio.html"],
			"matches": ["*://*.disneyplus.com/*"]
		},
		{
			"resources": ["browser-polyfill.js", "content/disneyplus/yard-inject.js"],
			"matches": ["*://*.disneyplus.com/*", "*://*.patreon.com/*"]
		}
	]
}
